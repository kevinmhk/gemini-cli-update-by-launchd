<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.google.gemini.cli.update</string>
    <key>ProgramArguments</key>
    <array>
        <string>__NPM_PATH__</string>
        <string>install</string>
        <string>-g</string>
        <string>@google/gemini-cli</string>
    </array>
    <key>StartCalendarInterval</key>
    <dict>
        <key>Weekday</key>
        <integer>0</integer> <!-- 0 for Sunday -->
        <key>Hour</key>
        <integer>14</integer> <!-- 2 PM -->
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    <key>StandardOutPath</key>
    <string>/tmp/gemini-cli-update.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/gemini-cli-update.log</string>
</dict>
</plist>
